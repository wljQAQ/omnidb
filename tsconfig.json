{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",

    //装饰器
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      //frontend
      "@omnidb/gui/*": ["./packages/frontend/gui/src/*"],
      "@omnidb/component": ["./packages/frontend/component/src/index"],
      "@omnidb/component/*": ["./packages/frontend/component/src/components/*/index", "./packages/frontend/component/src/components/*"],
      "@omnidb/request": ["./packages/frontend/request/src/index"]
    }
  },
  "exclude": ["node_modules", "target", "lib", "test-results", "dist"]
}
