generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

//用户
model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  name      String?
  avatar    String?
  password  String? //密码可以不需要 因为可能是第三方登录 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 第三方登录关联
  oauthAccounts OAuthAccount[]

  @@map("users")
}

// 第三方登录
model OAuthAccount {
  id                String    @id @default(uuid())
  provider          String //第三方供应商 比如github，google等等
  userId            String
  providerAccountId String // 第三方平台的用户 ID
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerAccountId])
  @@index([userId])
  @@map("user_oauth_account")
}

//多维表格应用
model BiApp {
  id     String    @id @default(cuid())
  // 应用名称
  name   String?
  //应用的表    
  tables BiTable[]

  @@map("bi_app")
}

model BiTable {
  id   String  @id @default(cuid())
  // 表名称
  name String?
  // 

  biApp   BiApp  @relation(fields: [biAppId], references: [id])
  biAppId String

  @@map("bi_table")
}
