generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

//多维表格应用
model BiApp {
  id     String    @id @default(cuid())
  // 应用名称
  name   String?
  //应用的表    
  tables BiTable[]

  @@map("bi_app")
}

model BiTable {
  id      String @id @default(cuid())
  // 表名称
  name    String? 
  // 

  biApp   BiApp  @relation(fields: [biAppId], references: [id])
  biAppId String
  @@map("bi_table")
}
